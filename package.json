{
  "name": "mcp-server-switcher",
  "version": "1.0.0",
  "description": "Toggle MCP servers on/off in your Claude config",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite build && electron .",
    "build": "vite build && electron-builder",
    "vite:dev": "vite"
  },
  "build": {
    "appId": "com.mcpswitcher.app",
    "productName": "MCP Server Switcher",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": [{ "target": "dmg", "arch": ["x64", "arm64"] }]
    },
    "linux": {
      "target": [{ "target": "AppImage", "arch": ["x64"] }]
    },
    "win": {
      "target": [{ "target": "nsis", "arch": ["x64"] }]
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/vite": "^4.2.0",
    "@vitejs/plugin-react": "^5.1.4",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "lucide-react": "^0.575.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwindcss": "^4.2.0",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "fuse.js": "^7.1.0"
  }
}
